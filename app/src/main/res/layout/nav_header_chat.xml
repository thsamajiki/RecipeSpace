<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.hero.recipespace.view.main.chat.viewmodel.ChatViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:padding="10dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="채팅방 서랍"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="@color/dark_purple_900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅 상대"
            android:textColor="@color/black"
            android:textSize="@dimen/body_text_size" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_my_profile_image"
                app:imageUrl="@{viewModel.myProfileImageUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/Circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_me"
                app:layout_constraintBottom_toBottomOf="@id/iv_my_profile_image"
                app:layout_constraintStart_toEndOf="@id/iv_my_profile_image"
                app:layout_constraintTop_toTopOf="@id/iv_my_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="나"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <TextView
                app:layout_constraintBottom_toBottomOf="@id/tv_me"
                app:layout_constraintStart_toEndOf="@id/tv_me"
                app:layout_constraintTop_toTopOf="@id/tv_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:ellipsize="end"
                android:text="@{viewModel.myUserName}"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_other_user_profile_image"
                app:imageUrl="@{viewModel.otherUserProfileImage}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/Circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_other_user_name"
                app:layout_constraintBottom_toBottomOf="@id/iv_other_user_profile_image"
                app:layout_constraintStart_toEndOf="@id/iv_other_user_profile_image"
                app:layout_constraintTop_toTopOf="@id/iv_other_user_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:text="@{viewModel.otherUserName}"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>